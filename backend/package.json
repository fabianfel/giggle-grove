{
  "name": "giggle-grove",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "rm -f server.js && yarn build && node server.js",
    "start:backend": "rm -f server.js && yarn build:backend && node server.js",
    "build:backend": "tsc --target es2022 --moduleResolution node server.ts",
    "build:frontend": "yarn --cwd ../frontend build && mkdir -p public && cp ../frontend/dist/giggle-grove-frontend/browser/index.html ./public/index.html",
    "build": "yarn build:frontend && yarn build:backend",
    "minify": "modclean -n default:safe,default:caution -r && node-prune && minify-all"
  },
  "dependencies": {
    "@fastify/static": "^7.0.1",
    "@fastify/websocket": "^9.0.0",
    "cockatiel": "^3.1.2",
    "etcd3": "^1.1.2",
    "fastify": "^4.26.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "minify-all": "^1.2.2",
    "modclean": "^3.0.0-beta.1",
    "node-prune": "^1.0.2",
    "typescript": "^5.4.2"
  }
}
